{% extends 'templates/default.twig' %}

{% block title %}Home{% endblock %}

{% block styles %}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery.tablesorter/2.24.6/css/theme.bootstrap.min.css" type="text/css">

{% if isMobile %}
    <link href="{{ url.base }}/css/mobile.css" rel="stylesheet" type="text/css">
{% else %}
    <link href="{{ url.base }}/css/desktop.css" rel="stylesheet" type="text/css">
{% endif %}

